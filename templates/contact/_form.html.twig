{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
  <div class="col-md-6">
    {{ form_label(form.firstName, 'Prénom *', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.firstName, {'attr': {'class': 'form-control' }}) }}
  </div>
  <div class="col-md-6">
    {{ form_label(form.lastName, 'Nom *', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
	{% if form.lastName.vars.errors|length %}
            <div class="invalid-feedback">{{ form_errors(form.lastName) }}</div>
    {% endif %}
  </div>
  <div class="col-md-12">
    {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {% if form.email.vars.errors|length %}
            <div class="invalid-feedback">{{ form_errors(form.email) }}</div>
        {% endif %}
  </div>
  <div class="col-md-12">
    {{ form_label(form.phone, 'Numéro de téléphone', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        {% if form.phone.vars.errors|length %}
            <div class="invalid-feedback">{{ form_errors(form.phone) }}</div>
        {% endif %}
  </div>
  <div class="col-md-12">
    {{ form_label(form.company, 'Entreprise / employeur *', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.company, {'attr': {'class': 'form-control'}}) }}
  </div>
  <div class="col-md-12">
    {{ form_label(form.owner, 'Carnet de contact', {'label_attr': {'class': 'form-label'}}) }}
    {{ form_widget(form.owner, {'attr': {'class': 'form-control'}}) }}
  </div>

	{# Use the following line to have online one host company (company that uses the CRM) #}
	{# <input type="hidden" name="contact[owner]" value="{{ hostCompany.id }}"> #}

  <div class="col-md-12">
    <button class="btn btn-primary" type="submit">{{ button_label|default('Save') }}</button>
    <a href="{{ path('app_contact_index') }}" class="btn btn-secondary">Back to list</a>
  </div>
{{ form_end(form) }}
