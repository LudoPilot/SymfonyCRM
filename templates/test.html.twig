{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/styles/app.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mt-5">Welcome to my page</h1>
        <p class="text-muted text-center">This is an example of using the Argon theme in Symfony</p>
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card mt-4">
                    <div class="card-header bg-gradient-default">
                        <h3 class="text-white mb-0">My Card</h3>
                    </div>
                    <div class="card-body">
                        <p>This is the body of my card</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/controllers/test.js') }}"></script>
{% endblock %}